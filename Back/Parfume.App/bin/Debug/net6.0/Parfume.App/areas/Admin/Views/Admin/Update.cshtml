@model UserUpdateViewModel
<div class="container">
    <form method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
            <span class="alert-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Surname">Surname</label>
            <input type="text" class="form-control" asp-for="@Model.Surname">
            <span class="alert-danger" asp-validation-for="Surname"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserName">UserName</label>
            <input type="text" class="form-control" asp-for="@Model.UserName">
            <span class="alert-danger" asp-validation-for="UserName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="email" class="form-control" asp-for="@Model.Email">
            <span class="alert-danger" asp-validation-for="Email"></span>
        </div>

            <div class="form-group">
            <label asp-for="NewPassword">NewPassword</label>
            <input type="password" class="form-control" asp-for="@Model.NewPassword">
            <span class="alert-danger" asp-validation-for="NewPassword"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmNewPassword">ConfirmNewPassword</label>
            <input type="password" class="form-control" asp-for="@Model.ConfirmNewPassword">
            <span class="alert-danger" asp-validation-for="ConfirmNewPassword"></span>
        </div>
      
     

        @Html.AntiForgeryToken()
        <button type="submit">Yenile</button>
    </form>
</div>