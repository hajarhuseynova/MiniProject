@model RegisterViewModel
<div class="container">
    <form method="post" enctype="multipart/form-data">

        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input type="text" class="form-control" asp-for="@Model.Name">
            <span class="alert-danger" asp-validation-for="Name"></span>
        </div>

        <div class="form-group">
            <label asp-for="Surname">Surname</label>
            <input type="text" class="form-control" asp-for="@Model.Surname">
            <span class="alert-danger" asp-validation-for="Surname"></span>
        </div>

        <div class="form-group">
            <label asp-for="UserName">UserName</label>
            <input type="text" class="form-control" asp-for="@Model.UserName">
            <span class="alert-danger" asp-validation-for="UserName"></span>
        </div>

        <div class="form-group">
            <label asp-for="Email">Email</label>
            <input type="email" class="form-control" asp-for="@Model.Email">
            <span class="alert-danger" asp-validation-for="Email"></span>
        </div>

        <div class="form-group">
            <label asp-for="Password">Password</label>
            <input type="password" class="form-control" asp-for="@Model.Password">
            <span class="alert-danger" asp-validation-for="Password"></span>
        </div>

        <div class="form-group">
            <label asp-for="ConfirmPassword">ConfirmPassword</label>
            <input type="password" class="form-control" asp-for="@Model.ConfirmPassword">
            <span class="alert-danger" asp-validation-for="ConfirmPassword"></span>
        </div>

        @Html.AntiForgeryToken()
        <button type="submit">Yarat</button>
    </form>
</div>