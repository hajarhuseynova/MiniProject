@model IEnumerable<Tester>

<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Adi</th>
                <th scope="col">Brandi</th>
                <th scope="col">Alis Qiymeti</th>
                <th scope="col">Satis Qiymeti</th>
                <th scope="col">Sekil</th>
                <th scope="col">Yenile</th>
                <th scope="col">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <th>@item.Title</th>
                        <th>@item.Brand.Name</th>
                        <th>@item.BuyPrice</th>
                        <th>@item.SellPrice</th>
                         <th><img style="width:100px;height:100px" src="~/assets/images/@item.Image" /></th>
                        <td><a asp-controller="tester" asp-action="update" asp-route-id="@item.Id" >
                            <i class="fas fa-edit text text-primary"></i></a></td>
                        <td><a onclick="if(!confirm('Are you sure?')){return false;}"
                            asp-controller="tester" asp-action="delete" asp-route-id="@item.Id"
                            class=" delete-item" ><i class="fas fa-trash text text-danger"></i></a></td>
                    </tr>
            }
        </tbody>
    </table>
        <nav aria-label="Page navigation example">
        <ul class="pagination">
            @for (int i = 1; i <= ViewBag.TotalPage; i++)
            {
                @if (i == ViewBag.CurrentPage)
                {
                    <li class="page-item disabled"><a class=" page-link" asp-controller="tester" asp-action="index" asp-route-page="@i">@i</a></li>
                }
                else
                {
                    <li class="page-item"><a class=" page-link" asp-controller="tester" asp-action="index" asp-route-page="@i">@i</a></li>
                }
            }
        </ul>
    </nav>
    <div>
        <a asp-controller="tester" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%" a  > 
            <div style="width:100%; " class="btn btn-outline-success">Yarat</div></a>
    </div>
</div>