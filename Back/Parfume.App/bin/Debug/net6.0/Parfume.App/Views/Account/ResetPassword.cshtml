 @model ResetPasswordViewModel

 @if (!string.IsNullOrWhiteSpace((string)TempData["TruePassword"]))
{
    <div style="display:none" id="message">@TempData["TruePassword"]</div>
}
@if (!string.IsNullOrWhiteSpace((string)TempData["FalsePassword"]))
{
    <div style="display:none" id="message">@TempData["FalsePassword"]</div>
}



<div class="reset">
        <div class="reset_container">
          <div class="reset_left"></div>
          <div class="reset_right">
            <h1>Yenilenme:</h1>
        
               <form action="#" method="post">
              <div
                class="alert alert-danger"
                asp-validation-summary="ModelOnly"
              ></div>

              <input
                asp-for="Password"
                class="form-control register_input"
                placeholder="Şifrə"
                type="password"
              />
              <span
                class="text text-danger"
                asp-validation-for="Password"
              ></span>

              <input
                asp-for="ConfirmPassword"
                class="form-control register_input"
                placeholder="Tekrar Şifrə"
                type="password"
              />
              <span
                class="text text-danger"
                asp-validation-for="ConfirmPassword"
              ></span>

              <button type="submit">Yenile</button>
            </form>

          </div>
        </div>
      </div>


<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    const Message = document.getElementById("message");
    if (Message != undefined) {
        const message = Message.innerHTML;
        if (message != "") {
            Swal.fire(`${message}`)
        }

    }
  </script>