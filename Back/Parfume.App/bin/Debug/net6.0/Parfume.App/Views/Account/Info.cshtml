   @model AppUser

<div class="infoPage">
        <div class="infoPage_container">
          <div class="infoPage_left" style="background-image:url('https://www.google.com/url?sa=i&url=https%3A%2F%2Fwww.harpersbazaar.com%2Fbeauty%2Fmakeup%2Fg40242272%2Fbest-rose-fragrances%2F&psig=AOvVaw0oIDqrkcJAoL-ILFjOEHNH&ust=1694169336495000&source=images&cd=vfe&opi=89978449&ved=0CBAQjRxqFwoTCJim8t2mmIEDFQAAAAAdAAAAABAM')"
              ></div>
          <div class="infoPage_right">
            <h1>Məlumatlar</h1>
          
                <form action="#" method="post">
              <div
                class="alert alert-danger"
                asp-validation-summary="ModelOnly"
              ></div>

              <input
              asp-for="Name"
                disabled
                class="form-control register_input"
                placeholder="Ad"
                type="text"
              />
                    <span class="text text-danger" asp-validation-for="Name"></span>

              <input
              asp-for="Surname" 
                disabled
                class="form-control register_input"
                placeholder="Soyad"
                type="text"
              />
                    <span class="text text-danger" asp-validation-for="Surname"></span>


              <input
                asp-for="UserName" 
                disabled
                class="form-control register_input"
                placeholder="İstifadəçi Adı"
                type="text"
              />
                    <span class="text text-danger" asp-validation-for="UserName"></span>

              <input
                    asp-for="Email" 
                disabled
                class="form-control register_input special_inp"
                placeholder="Email"
                type="email"
              />
                    <span class="text text-danger" asp-validation-for="Email"></span>

               <a id="update_button" asp-controller="account" asp-action="update">Yenilə</a>
            </form>
          </div>
        </div>
      </div>