@model UserUpdateViewModel

  <div class="update">
        <div class="update_container">
          <div class="update_left"  style="
                background-image: url(/assets/images/NewProduct/all.webp);
              "></div>
          <div class="update_right">
            <h1>Yenilə</h1>
         
                 <form action="#" method="post">
              <div
                class="alert alert-danger"
                asp-validation-summary="ModelOnly"
              ></div>

              <input
                asp-for="Name"
                class="form-control register_input"
                placeholder="Ad"
                type="text"
              />
              <span class="text text-danger" asp-validation-for="Name"></span>
              <input
                asp-for="Surname"
                class="form-control register_input"
                placeholder="Soyad"
                type="text"
              />
              <span
                class="text text-danger"
                asp-validation-for="Surname"
              ></span>

              <input
                asp-for="UserName"
                class="form-control register_input"
                placeholder="Istifadəçi Adi"
                type="text"
              />
              <span
                class="text text-danger"
                asp-validation-for="UserName"
              ></span>

              <input
                asp-for="Email"
                class="form-control register_input"
                placeholder="Email"
                type="email"
              />
              <span class="text text-danger" asp-validation-for="Email"></span>

          

              <button type="submit">Yenilə</button>
            </form>
          </div>
        </div>
      </div>