@model List<AppUser>



@{
    ViewData["Title"] = "Home Page";
}



   @if(User.Identity.IsAuthenticated && User.IsInRole("User")){
       <div class="chat">
        <div class="container chat_container">
                 <h1>Onlayn Çat</h1>
   <div class="chat_double">
              <div class="chat_left">
            <div class="row p-1">
              <h1>İstifadəçi</h1>
              <div class="col-5">
                  <input type="text" placeholder="Sec" disabled  />
                <input type="text" hidden id="userInput" />
              </div>
            </div>
            <div class="row p-1">
              <h1>Mesaj</h1>
              <div class="col-5">
                <input
                  type="text"
                  class="w-100"
                  id="messageInput"
                  placeholder="Yazin..."
                />
              </div>
            </div>
            <div class="row p-1">
              <div class="col-6 text-end">
                <button
                  type="button"
                  id="sendButton"
                  value="Send Message"
                  class="addtobasket"
                >Göndər</button>
              </div>
            </div>
            <div class="row p-1">
              <div class="col-6"></div>
            </div>
            <div class="row p-1">
              <div class="col-6">
                <ul id="messagesList"></ul>
              </div>
            </div>
          </div>
          <div class="chat_right">
            <ul>
         @foreach (var item in Model.Where(x=>x.UserName.Contains("Admin")))
        {
            @if (!string.IsNullOrWhiteSpace(item.ConnectionId))
            {
                <li class="userchat" style="color:#ffaf06;cursor:pointer;" id="@item.Id">@item.UserName</li>
            }
            else
            {
                <li class="userchat" style="color:black;cursor:pointer;" id="@item.Id">@item.UserName</li>
            }
        }
            </ul>
          </div>
      </div>

        </div>
      </div>

   }




    @if(User.Identity.IsAuthenticated && User.IsInRole("Admin")|| User.IsInRole("SuperAdmin")){
       <div class="chat">
        <div class="container chat_container">
                 <h1>Onlayn Çat</h1>
   <div class="chat_double">
              <div class="chat_left">
            <div class="row p-1">
              <h1>İstifadəçi</h1>
              <div class="col-5">
                  <input type="text" placeholder="Kimə yazacağınızı seçin" disabled  />
                <input type="text" hidden id="userInput" />
              </div>
            </div>
            <div class="row p-1">
              <h1>Mesaj</h1>
              <div class="col-5">
                <input
                  type="text"
                  class="w-100"
                  id="messageInput"
                  placeholder="Yazın..."
                />
              </div>
            </div>
            <div class="row p-1">
              <div class="col-6 text-end">
                <button
