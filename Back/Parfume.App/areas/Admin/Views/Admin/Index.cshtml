@model IEnumerable<AppUser>
<div class="container">
    <table class="table table-sm">
        <thead>
            <tr>
                <th scope="col">Id</th>
                <th scope="col">Ad:</th>
                <th scope="col">Istifadəçi Adı:</th>
                <th scope="col">Email:</th>
                <th scope="col">Yenilə</th>
                <th scope="col">Sil</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                    <tr>
                        <th scope="row">@item.Id</th>
                        <th>@item.Name</th>
                        <th>@item.UserName</th>
                        <th>@item.Email</th>
                                   <td><a asp-controller="Admin" asp-action="Update" asp-route-id="@item.Id" ><i class="fas fa-edit text text-primary"></i></a></td>
                        <td><a onclick="if(!confirm('Əminsən?')){return false;}" asp-controller="Admin" asp-action="Delete"
                            asp-route-id="@item.Id"class=" delete-item" ><i class="fas fa-trash text text-danger"></i></a></td>
                    </tr>
            }
        </tbody>
    </table>
    <div>
        <a asp-controller="admin" asp-action="create" style="display: block; text-decoration: none; color: white; width: 100%; height: 100%" a>
            <div style="width:100%; " class="btn btn-outline-success">Yarat </div></a>
    </div>
</div>